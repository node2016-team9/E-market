extends ../shared/admin-layout

block main-content
    form.form-horizontal(method="post", action="", name="editUserForm")
        fieldset
            legend Editing user #{editedUser.username}
            .form-group
                label.col-md-4.control-label(for="username") Username
                .col-md-4
                    input.form-control(id="username",class="form-control", type="text", name="username",value="#{editedUser.username}" placeholder="#{editedUser.username}" required="required")
            .form-group
                label.col-md-4.control-label(for="password") Password
                .col-md-4
                    input.form-control(id="password", class="form-control", type="password", name="password", placeholder="Password")
            .form-group
                label.col-md-4.control-label(for="role") Role
                .col-md-4
                    select.form-control(id="role" name="role")
                        each role in roles
                            option(name="role")=role
            .form-group
                .col-md-4.col-md-offset-4
                    input.btn.btn-sucess(type="submit" value="Update")