        fieldset
            legend Add category
            .form-group
                label.col-md-4.control-label(for="name") Name
                .col-md-4
                    input.form-control(type="text" name="name" placeholder="Category name")
            .form-group
                .col-md-4.col-md-offset-4
                    input.btn.btn-primary(type="submit" value="Add")