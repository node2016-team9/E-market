extends ../shared/layout
block main-content
   form.form-horizontal(method="post" action="")
      fieldset
         legend Add Product
         .form-group
            label.col-md-4.control-label(for="name") First Name
            .col-md-4
               input.form-control( type="text", name="firstName", placeholder="First Name")
         .form-group
            label.col-md-4.control-label(for="price") Last Name
            .col-md-4
               input.form-control( type="text" name="lastName", placeholder="Last Name")
         .form-group
            label.col-md-4.control-label(for="image-url") Phone number
            .col-md-4
               input.form-control( type="text," name="phoneNumber", placeholder="Phone number")
         .form-group
            label.col-md-4.control-label(for="description") Avatar url
            .col-md-4
               textarea.form-control( name="avatar", placeholder="Avatar url")
         .form-group
            .col-md-4.col-md-offset-4
               input.btn.btn-primary(type="submit" value="Update information")