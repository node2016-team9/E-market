extends ../shared/layout

block main-content
    form.form-horizontal(method="post")
        fieldset
            legend Register
            .form-group
                label.col-md-4.control-label(for="username") Username
                .col-md-4
                    input.form-control(id="username" class="form-control" type="text" name="username" placeholder="Username")
            .form-group
                label.col-md-4.control-label(for="password") Password
                .col-md-4
                    input.form-control(id="password" class="form-control" type="password" name="password" placeholder="Password")
            .form-group
                label.col-md-4.control-label(for="confirm-password") Confirm Password
                .col-md-4
                    input.form-control(id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Confirm password")
            .form-group
                .col-md-4.col-md-offset-4
                    input.btn.btn-primary(type="submit" value="Register")