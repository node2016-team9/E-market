extends ../shared/layout

block main-content
    form.form-horizontal(method="post", action="/register", name='registerForm', ng-submit='registerForm.$valid')
        fieldset
            legend Register
            .text-center.error(ng-show='registerForm.username.$error.minlength || registerForm.inputUsername.$error.minlength')  Username must be between 6 and 50 symbols
            .form-group
                label.col-md-4.control-label(for="username") Username
                .col-md-4
                    input.form-control(id="username",class="form-control", type="text", name="username",ng-model='username', ng-minlength='6', ng-maxlength='50', required='required', placeholder="Username")
            .text-center.error(ng-show='registerForm.password.$error.minlength') Pasword must be at least 6 symbols long !
            .form-group
                label.col-md-4.control-label(for="password") Password
                .col-md-4
                    input.form-control(id="password", class="form-control", type="password", name="password", placeholder="Password", ng-minlength='6', ng-model='password', required='required')
            .text-center.error(ng-show='password !== confirmPassword && registerForm.confirmPassword.$dirty') Confirm password is not the same as password!
            .form-group
                label.col-md-4.control-label(for="confirm-password") Confirm Password
                .col-md-4
                    input.form-control(id="confirm-password", class="form-control", type="password", ng-model="confirmPassword", name="confirmPassword", placeholder="Confirm password")
            .form-group
                .col-md-4.col-md-offset-4
                    input.btn.btn-primary(type="submit" value="Register" ng-disabled='registerForm.$invalid || password != confirmPassword')