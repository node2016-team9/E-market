extends ../shared/layout

block main-content
     h3.text-center
      | Greetings,&nbsp;
      = currentUser.username
      |  welcome to your profile!
     hr
     div.row.vdivide
         div.col-md-6
             h3.text-center Here's a list of your auctions
             table.table-bordered.table
                 thead
                     tr.thead-inverse
                     th.text-center Name
                     th.text-center  Posted On
                     th.text-center  Description
                     th.text-center  Price
                 tbody
                    each    product in currentUserProducts
                        tr.text-center
                            td: a(href='/products/details/'+ product._id)= product.name
                            td= product.postedDate
                            td= product.description
                            td= product.price

         div.vdivide
         div.col-md-5.col-md-offset-1
             h3.text-center There's a list of your orders
             table.table.table-bordered
                 thead
                     tr.thead-inverse
                     th.text-center Name
                     th.text-center  Posted On
                     th.text-center  Description
                     th.text-center  Price
                 tbody
                     each    product in currentUserProducts
                         tr.text-center
                             td: a(href='/products/details/' + product._id)= product.name
                             td= product.postedDate
                             td= product.description
                             td= product.price
